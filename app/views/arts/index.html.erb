
<p id="notice"><%= notice %></p>

<h1>Arts</h1>

<table >
  <thead >

    <tr>
      <th>Tittle</th>
      <th>Date</th>
      <th>Description</th>
      <th>Author</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @arts.each do |art| %>
      <tr >
        <td><%= art.Tittle %></td>
        <td><%= art.Date %></td>
        <td><%= art.Description %></td>
        <td><%= art.Author %></td>
        <td><img width= 200px src = "<%= art.Picture %>"></td>
        <td><%= link_to 'Show', art %></td>
        <td><%= link_to 'Edit', edit_art_path(art) %></td>
        <td><%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

